<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_8"
        android:layout_height="wrap_content">
        <com.ysxsoft.common_base.view.custom.image.RoundImageView
            android:layout_marginHorizontal="@dimen/dp_5"
            android:id="@+id/logo"
            app:radius="@dimen/dp_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="舒克牙膏150克"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sales"
                    android:layout_width="wrap_content"
                    android:text="月售298份"
                    android:textColor="@color/color_989898"
                    android:layout_marginRight="@dimen/dp_16"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content" />
                <com.ysxsoft.common_base.view.widgets.ERatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:clickable="false"
                    app:halfstart="false"
                    app:starCount="5"
                    app:starEmpty="@mipmap/icon_star_normal"
                    app:starFill="@mipmap/icon_star_selected"
                    app:starImageSize="@dimen/dp_16"
                    app:starImagePadding="0dp"
                    app:starImageHeight="14dp"
                    app:starImageWidth="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="￥49"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>