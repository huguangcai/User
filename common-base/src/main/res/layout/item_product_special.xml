<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/childTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.ysxsoft.common_base.view.custom.FlowLayout
        android:id="@+id/flowLayout"
        app:tag_gravity="-1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/childTitle">
    </com.ysxsoft.common_base.view.custom.FlowLayout>

    <View
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" android:background="@color/color_f2f2f2"/>

</androidx.constraintlayout.widget.ConstraintLayout>