<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <!-- AppCompatEditText默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">@color/hint</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/icon_start_up</item>
        <!--<item_evaluate_list_layout name="android:windowIsTranslucent">true</item_evaluate_list_layout>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CenterDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CenterDialogStyleClose" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CenterDialogWithoutStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--去除背景-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/popWindowAlphaAnimation</item>
    </style>

    <style name="CenterFullDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--全屏-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/popWindowYAnimation</item>
    </style>

    <style name="BottomPwdStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/popWindowYAnimation</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软件盘-->
    </style>

    <style name="popWindowYAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_bottom_out</item>
        <item name="android:windowExitAnimation">@anim/pop_bottom_in</item>
    </style>

    <style name="popWindowAlphaAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_center_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/pop_center_alpha_out</item>
    </style>

    <style name="Spainner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:hint">请选择</item>
    </style>

    <style name="MultipleStatusView" />

    <style name="MultipleStatusView.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#a9b7b7</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="checkboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_checkbox_selector</item>
    </style>


    <style name="SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@mipmap/icon_music_point</item>
    </style>

    <style name="BoldTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="YRating" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/bg_rating_selector</item>
        <item name="android:minHeight">@dimen/dp_16</item>
        <item name="android:maxHeight">@dimen/dp_16</item>
    </style>

    <style name="FontText13">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/color_282828</item>
    </style>

    <style name="FontText15">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/color_282828</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
        <item name="android:textColor">@color/color_282828</item>
    </style>
</resources>
