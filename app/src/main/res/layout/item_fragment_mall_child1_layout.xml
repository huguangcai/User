<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="@dimen/dp_5"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">


        <com.ysxsoft.common_base.view.custom.image.RoundImageView
            android:id="@+id/riv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:radius="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手工内外普洗（轿车）"
            android:textColor="@color/color_282828"
            app:layout_constraintLeft_toRightOf="@id/riv"
            app:layout_constraintTop_toTopOf="@id/riv"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥25.00"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/theme_color"
            app:layout_constraintLeft_toRightOf="@id/riv"
            app:layout_constraintBottom_toBottomOf="@id/riv"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tvSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_989898"
            android:textSize="@dimen/sp_10"
            android:text="销量：1269"
            app:layout_constraintBottom_toBottomOf="@id/riv"
            app:layout_constraintLeft_toRightOf="@id/tvMoney"
            app:layout_constraintTop_toTopOf="@id/tvMoney"
            android:layout_marginLeft="@dimen/dp_20"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>