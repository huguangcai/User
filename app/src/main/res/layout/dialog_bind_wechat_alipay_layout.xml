<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_10"
    android:minHeight="210dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="15dp"
        android:src="@mipmap/icon_wallet_close" />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="请绑定支付宝账号"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15.5dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/bg_shape_white_cccccc_border_r5"
        android:hint="请输入支付宝账号"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_282828"
        android:textColorHint="@color/color_989898"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tvOk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15.5dp"
        android:background="@drawable/shape_theme_btn"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_15" />

</LinearLayout>