<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nikeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="@dimen/dp_10"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_13"
            tools:text="订单号:1264897625123~" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:text="待接车"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:background="@color/color_ebebeb" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_location"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_13"
            tools:text="距客户:12km" />

        <TextView
            android:id="@+id/tvSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_13"
            tools:text="共1件，合计" />

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_13"
            tools:text="¥320" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:background="@color/color_ebebeb" />

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHave_CarTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_13"
            tools:text="用车时间:11月7日 14:26" />

        <TextView
            android:id="@+id/tvWaittingOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户待确认"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tvLook"
            android:layout_width="70dp"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/bg_shape_theme_border_color_r5"
            android:gravity="center"
            android:text="查看原因"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>
</LinearLayout>